<h1><%= pluralize(@projects.size, 'Project') %> </h1>


<% @projects.each do |project| %>
  <article>
    <header>
      <h2><%= link_to(project.name, project) %></h2>
    </header>
    <p>
      <%= truncate( project.description , length:150, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Pledge Target:</th>
        <td><%= project.target_pledge_amount %></td>
      </tr>
      <tr>
        <th>Pledge End Date:</th>
        <td><%= format_pledging_ends_on(project) %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= project.website %></td>
      </tr>
    </table>
  </article>
<% end %>