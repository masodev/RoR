<h1><%= plurarize(@projects.size, 'Project') %> </h1>


<% @projects.each do |project| %>
  <article>
    <header>
      <h2><%= project.name %></h2>
    </header>
    <p>
      <%= project.description %>
    </p>
    <table>
      <tr>
        <th>Pledge Target:</th>
        <td><%= project.target_pledge_amount %></td>
      </tr>
      <tr>
        <th>Pledge End Date:</th>
        <td><%= project.pledging_ends_on %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= project.website %></td>
      </tr>
    </table>
  </article>
<% end %>